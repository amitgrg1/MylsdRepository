class student:
    def __init__(self,surname="Gurung",name="Amit",studentno=898989,course="computer science"):
        self.surname = surname
        self.name = name
        self.course = course
        self.studentno = studentno
        print(self.surname,self.name,self.studentno,self.course)
        
        def showDetails(self):
           print(self.surname,self.name,self.studentno,self.course)
         
class Book:
    def __init__(self,BookTitle="slam dunk",author="Taehiko",year=2001):
        self.BookTitle = BookTitle
        self.author = author
        self.year = year
        print("BookTitle\t", self.BookTitle)
        print("author\t", self.author)
        print("year\t", self.year)
